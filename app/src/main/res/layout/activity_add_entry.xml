<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Νέα Καταχώρηση Παραγωγής"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:padding="8dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Wsnh.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <!-- Κατηγορία -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Κατηγορία"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerCategory"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Λεζάντα υποκατηγορίας Vodafone Home W/F -->
        <TextView
            android:id="@+id/textHomeSubtypeLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Τύπος Vodafone Home W/F"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp"
            android:visibility="gone" />

        <!-- Υποκατηγορία Vodafone Home W/F -->
        <Spinner
            android:id="@+id/spinnerHomeSubtype"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="8dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Αρ. Παραγγελίας -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Αριθμός Παραγγελίας"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editOrderNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:hint="π.χ. 123456"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Ονοματεπώνυμο -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ονοματεπώνυμο Πελάτη"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editCustomerFullName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:hint="π.χ. Γιώργος Παπαδόπουλος"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Αρ. Αναφοράς -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Νούμερο Αναφοράς"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editReferenceNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:hint="π.χ. REF-0001"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/checkHasPending"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Υπάρχει εκκρεμότητα για αυτή την παραγγελία"
            android:textColor="@color/text_primary"
            android:buttonTint="@color/accent_blue"
            android:layout_marginBottom="16dp" />

        <!-- Φωτογραφία -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Φωτογραφία"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAttachPhoto"
            style="@style/Wsnh.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επισύναψη φωτογραφίας" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRemovePhoto"
            style="@style/Wsnh.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Αφαίρεση φωτογραφίας"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textPhotoStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:text="Καμία φωτογραφία"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imagePhotoPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />

        <!-- Γραμμή διαχωρισμού -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_translucent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp" />

        <!-- Ποσότητα -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ποσότητα (τεμ.)"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/editCount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="number"
            android:hint="π.χ. 3"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="20dp" />

        <!-- Κουμπί αποθήκευσης -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSave"
            style="@style/Wsnh.Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Αποθήκευση" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
