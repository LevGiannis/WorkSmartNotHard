<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/welcomeScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_dark"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Τίτλος & υπότιτλος -->
                <TextView
                    android:id="@+id/textAppName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:paddingBottom="6dp"
                    android:gravity="center"
                    android:textAlignment="center" />
        <!-- Τίτλος αφαιρείται -->

        <TextView
            android:id="@+id/textWelcomeSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Συμπλήρωσε τα στοιχεία σου για να ξεκινήσεις."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="18dp"
            android:gravity="center"
            android:textAlignment="center" />

        <!-- ΕΝΟΤΗΤΑ: Στοιχεία χρήστη -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ΣΤΟΙΧΕΙΑ ΧΡΗΣΤΗ"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:letterSpacing="0.08"
            android:textColor="@color/text_secondary"
            android:paddingBottom="6dp" />

        <!-- Όνομα -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Όνομα"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:importantForAutofill="yes"
            android:autofillHints="name"
            android:hint="π.χ. Γιάννης"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <!-- Επώνυμο -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επώνυμο"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:importantForAutofill="yes"
            android:autofillHints="familyName"
            android:hint="π.χ. Παπαδόπουλος"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <!-- Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textEmailAddress"
            android:importantForAutofill="yes"
            android:autofillHints="emailAddress"
            android:hint="π.χ. name@vodafone.gr"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <!-- Ψευδώνυμο -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ψευδώνυμο"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/etNickname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:hint="π.χ. JohnDoe"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="10dp" />

        <!-- Κωδικός Καταστήματος -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Κωδικός Καταστήματος"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/etStoreCode"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:hint="π.χ. VODA123"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:textSize="14sp"
            android:layout_marginBottom="24dp" />

        <!-- Κουμπί Συνέχεια -->
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Συνέχεια"
            android:paddingVertical="10dp" />

    </LinearLayout>

</ScrollView>
