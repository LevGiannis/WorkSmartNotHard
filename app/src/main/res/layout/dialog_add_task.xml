<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ΣΤΟΙΧΕΙΑ ΠΕΛΑΤΗ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ΣΤΟΙΧΕΙΑ ΠΕΛΑΤΗ"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:paddingBottom="4dp" />

        <!-- Όνομα -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Όνομα πελάτη"
            android:textSize="13sp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/editTaskName"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="textPersonName"
            android:hint="π.χ. Γιάννης Παπαδόπουλος"
            android:textSize="14sp" />

        <!-- Κινητό -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Κινητό"
            android:textSize="13sp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/editTaskPhone"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="phone"
            android:hint="π.χ. 69XXXXXXXX"
            android:textSize="14sp" />

        <!-- ΑΦΜ -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ΑΦΜ"
            android:textSize="13sp"
            android:paddingTop="8dp"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/editTaskAfm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:hint="π.χ. 123456789"
            android:textSize="14sp" />

        <!-- Τύπος -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Τύπος εκκρεμότητας"
            android:textSize="13sp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/editTaskType"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:inputType="text"
            android:hint="π.χ. PortIN, Home, FWA..."
            android:textSize="14sp" />

        <!-- Προθεσμία -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Προθεσμία"
            android:textSize="13sp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/textTaskDueDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="Προθεσμία: -"
            android:textSize="14sp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <!-- Γραμμή διαχωρισμού -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#33FFFFFF"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp" />

        <!-- Περιγραφή -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Περιγραφή εκκρεμότητας"
            android:textSize="13sp"
            android:paddingBottom="2dp" />

        <EditText
            android:id="@+id/editTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="3"
            android:maxLines="6"
            android:background="@drawable/bg_dialog_field"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:hint="Σημείωσε τι πρέπει να γίνει, τι περιμένουμε από τον πελάτη κτλ."
            android:textSize="14sp" />

    </LinearLayout>

</ScrollView>
