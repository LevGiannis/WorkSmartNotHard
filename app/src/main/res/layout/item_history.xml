<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    style="@style/Wsnh.Card">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textHistoryCategory"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="@color/text_primary"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textHistoryCount"
            android:layout_width="wrap_content"
            android:textColor="@color/text_secondary"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textHistoryDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkHistoryHasPending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Υπάρχει εκκρεμότητα"
        android:textColor="@color/text_primary"
        android:buttonTint="@color/accent_blue" />

    <TextView
        android:id="@+id/textHistoryPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        android:textColor="@color/accent_blue"
        android:visibility="gone"
        android:text="Φωτογραφία: Προβολή" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
