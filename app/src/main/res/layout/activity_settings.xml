<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/settingsScroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textSettingsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ρυθμίσεις Προφίλ"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="6dp" />

        <TextView
            android:id="@+id/textSettingsSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ενημέρωσε τα στοιχεία σου και τον παραλήπτη για τα reports."
            android:textSize="14sp"
            android:paddingBottom="18dp" />

        <!-- Όνομα -->
        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Όνομα"
            android:inputType="textPersonName"
            android:importantForAutofill="yes"
            android:autofillHints="name"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Επώνυμο -->
        <EditText
            android:id="@+id/editSurname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Επώνυμο"
            android:inputType="textPersonName"
            android:importantForAutofill="yes"
            android:autofillHints="familyName"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Email χρήστη -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email χρήστη"
            android:inputType="textEmailAddress"
            android:importantForAutofill="yes"
            android:autofillHints="emailAddress"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Ψευδώνυμο -->
        <EditText
            android:id="@+id/editNickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ψευδώνυμο"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:layout_marginBottom="10dp" />

        <!-- Κωδικός Καταστήματος -->
        <EditText
            android:id="@+id/editStore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Κωδικός Καταστήματος"
            android:inputType="text"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Divider (απλό) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginBottom="16dp" />

        <!-- Email παραλήπτη report -->
        <EditText
            android:id="@+id/editReportEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email παραλήπτη report (Excel/CSV)"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="18dp" />

        <!-- Save -->
        <Button
            android:id="@+id/buttonSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Αποθήκευση"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>
