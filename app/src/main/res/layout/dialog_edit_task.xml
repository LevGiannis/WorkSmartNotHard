<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Wsnh.Card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ΣΤΟΙΧΕΙΑ ΠΕΛΑΤΗ"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textAllCaps="true"
            android:textColor="@color/text_secondary"
            android:paddingBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Wsnh.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Όνομα πελάτη">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskName"
                style="@style/Wsnh.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Wsnh.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Κινητό">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskPhone"
                style="@style/Wsnh.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Wsnh.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="ΑΦΜ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskAfm"
                style="@style/Wsnh.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Wsnh.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Τύπος εκκρεμότητας">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskType"
                style="@style/Wsnh.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Προθεσμία"
            android:textSize="13sp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp" />

        <TextView
            android:id="@+id/textTaskDueDate"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/bg_dialog_field"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:text="Προθεσμία: -"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_translucent"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Περιγραφή εκκρεμότητας"
            android:textSize="13sp"
            android:layout_marginTop="10dp"
            android:paddingBottom="6dp"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Wsnh.TextInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Περιγραφή">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTaskDescription"
                style="@style/Wsnh.TextInput.EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:maxLines="6"
                android:gravity="top"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Φωτογραφία"
            android:textSize="13sp"
            android:paddingTop="12dp"
            android:paddingBottom="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonAttachPhoto"
            style="@style/Wsnh.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Επισύναψη φωτογραφίας" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRemovePhoto"
            style="@style/Wsnh.Button.Outlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Αφαίρεση φωτογραφίας"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textPhotoStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Καμία φωτογραφία"
            android:textColor="@color/text_secondary"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imagePhotoPreview"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
