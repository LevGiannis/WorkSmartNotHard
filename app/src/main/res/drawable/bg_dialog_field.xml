<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Σκούρο φόντο για dark theme -->
    <solid android:color="@color/field_bg" />

    <!-- Ελαφρύ περίγραμμα -->
    <stroke
        android:width="1dp"
        android:color="@color/field_stroke" />

    <!-- Στρογγυλεμένες γωνίες -->
    <corners android:radius="8dp" />

    <!-- Εσωτερικά περιθώρια του background -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
