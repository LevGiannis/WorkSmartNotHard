<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Placeholder theme styles for WelcomeActivity -->
    <style name="Theme_Wsnh_Purple" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />
    <style name="Theme_Wsnh_Blue" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />
    <style name="Theme_Wsnh_Black" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />
    <style name="Theme_Wsnh_Gray" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />
    <style name="Theme_Wsnh_Pink" parent="Theme.MaterialComponents.DayNight.DarkActionBar" />

    <style name="Wsnh.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_dark</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeColor">@color/accent_blue_30</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="Wsnh.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/accent_blue_dark</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="titleTextAppearance">@style/Wsnh.TextAppearance.ToolbarTitle</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Wsnh.TextAppearance.ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <style name="Wsnh.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">14dp</item>
        <item name="backgroundTint">@color/accent_blue</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Wsnh.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/accent_blue_30</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Wsnh.Button.Action" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">14dp</item>
        <item name="strokeColor">@color/accent_blue_30</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="iconTint">@color/accent_blue</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="iconPadding">8dp</item>
    </style>

    <style name="Wsnh.TextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/field_bg</item>
        <item name="boxStrokeColor">@color/accent_blue_30</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxCornerRadiusTopStart">14dp</item>
        <item name="boxCornerRadiusTopEnd">14dp</item>
        <item name="boxCornerRadiusBottomStart">14dp</item>
        <item name="boxCornerRadiusBottomEnd">14dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>

    <style name="Wsnh.TextInput.EditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThemeOverlay.Wsnh.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowBackground">@color/card_dark</item>
        <item name="colorSurface">@color/card_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <item name="buttonBarPositiveButtonStyle">@style/Wsnh.DialogButton.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Wsnh.DialogButton.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Wsnh.DialogButton.Negative</item>
    </style>

    <style name="Wsnh.DialogButton.Positive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/accent_blue</item>
        <item name="rippleColor">@color/accent_blue_30</item>
    </style>

    <style name="Wsnh.DialogButton.Negative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="rippleColor">@color/accent_blue_30</item>
    </style>

</resources>
